{% extends "layout.html.twig" %}

{% block content %}
    <div class="row" >
        <a href="/adherent/creerAdherent"> Ajouter un Adherent </a><br>
        <a href="{{ path('adherent_creerAdherent') }}"> Ajouter un Adherent </a>
        <table border="2">
            <caption>Recapitulatif des Adherents</caption>
            <thead>
            <tr><th>nom</th><th>adresse</th><th>date paiement</th><th>opération</th></tr>
            </thead>
            <tbody>
        {%  if adherents is not empty %}
            {% for adherent in adherents %}
                <tr>
                    <td>
                        {{ adherent.nom }}
                    </td>
                    <td>
                        {{ adherent.datePaiement | date('d-m-y-') }}
                    </td>
                    <td>
                        {% if adherent.nbrEmprunt>0 %}{{ adherent.nbrEmprunt }} emprunt(s) en cours<br>{% endif %}
                        {% if adherent.nbrEmprunt>0 and adherent.retard==1 %} <strong style="background-color: #ff0000"></strong> <br>{% endif %}
                        {% if adherent.retard == 1 %}
                            <span style="color:red">paiement en retard depuis : {{ adherent.datePaiementFutur | date('d-m-y') }}</span><br>
                        {% elseif adherent.retardProche == 1 %}
                            <span style="color:green">paiement à renouveler</span>
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('adherent_modifierAdherent', {id: adherent.id}) }}">modifier</a>
                        <a href="{{ path('adherent_supprimerAdherent', {id: adherent.id}) }}">supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        {% else %}
            <tr>
                <td> pas d'auteur dans la base de données</td>
            </tr>
        {% endif %}
    </div>
{% endblock %}